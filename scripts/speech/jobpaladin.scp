		IF ( <COMPLEXITY.HIGH> || <COMPLEXITY.MEDIUM> )
			DORAND 5
				SAY I uphold Honor!
				SAY I am a Paladin.
				SAY I am a Paladin of Britannia.
				SAY I have the honor of being a Paladin.
				SAY I assist those who need my help.
			ENDDO
		ELSE
			DORAND 5
				SAY I uphold Honor!
				SAY I am a Paladin.
				SAY I am a Paladin of Britannia.
				SAY I have the honor of being a Paladin.
				SAY I assist those who need my help.
			ENDDO
		ENDIF
	ELIF ( <SRC.KARMA.NEUTRAL> )
		IF ( <COMPLEXITY.HIGH> || <COMPLEXITY.MEDIUM> )
			DORAND 6
				SAY I am a Paladin!
				SAY I am a Paladin, <SRC.SEX good sir/good lady>.
				SAY I uphold Honor!
				SAY I am proud to be a Paladin.
				SAY I am a Paladin.
				SAY I represent Honor to the populace of Britannia.
			ENDDO
		ELSE
			DORAND 6
				SAY I am a Paladin!
				SAY I am a Paladin, <SRC.SEX good sir/good lady>.
				SAY I uphold Honor!
				SAY I am proud to be a Paladin.
				SAY I am a Paladin.
				SAY I represent Honor to the populace of Britannia.
			ENDDO
		ENDIF
	ELSE
