TYPE=t_normal
VALUE=6000
CATEGORY=Artifacts
SUBSECTION=Greater Treasures of Tokuno
DESCRIPTION=Pigments of Tokuno (colored)
ON=@ClientTooltip
   SRC.ADDCLILOC 1061078,<INSTANCES>
   SRC.ADDCLILOC 1060741,<EVAL <MORE1>>//Charges: ~1
ON=@Create
   COLOR={047e 0499}
   ATTR=attr_magic|attr_identified
   MORE1=50
ON=@DClick
   MESSAGELOC 1070929//"Select the artifact or enhanced magic item to dye."
   TARGET
   RETURN 1
ON=@TargOn_Item
   IF (<MORE1>)
      IF (<SRC.TARG.TOPOBJ.UID>==<SRC.UID>)
         IF (<SRC.TARG.ATTR> & attr_magic)
            SRC.TARG.COLOR=<COLOR>
            SOUND=snd_z_end_liquid
            MORE1 -= 1
         ELSE
            SRC.SYSMESSAGELOC 1070931//"You can only dye artifacts and enhanced magic items with this tub."
         ENDIF
      ELSE
         SRC.SYSMESSAGE The item should be in your backpack
      ENDIF
   ELSE
      SRC.SYSMESSAGE There are no charges left
   ENDIF
   RETURN 1
ON=@TargOn_Char
   RETURN 1
ON=@TargOn_Ground
   RETURN 1

